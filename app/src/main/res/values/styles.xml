<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignupEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_rounded_border</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="SignupSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_rounded_border</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SignupButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
